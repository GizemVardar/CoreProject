@model Demo.Core.MvcUI.Models.CategoryListViewModel
<div class="list-group">

    @foreach(var item in Model.Categories)
    {
        var css = "list-group-item";
        if (item.CategoryID == Model.CurrentCategory)
        {
            css += "active";
        }
        <a href="/product/index?/category=@item.CategoryID" class="@css">@item.CategoryName</a>
    }

</div>